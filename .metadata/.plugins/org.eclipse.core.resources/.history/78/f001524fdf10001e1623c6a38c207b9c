package com.ict.edu555;

import java.awt.Dimension;
import java.awt.Toolkit;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class MainPage extends JFrame{
	JButton point_bt,book_bt,attend_bt;
	JPanel mainscreen, bt_panel;
	public MainPage() {
		super("메인화면");
		
		mainscreen = new JPanel();
		point_bt = new JButton();
		book_bt = new JButton();
		attend_bt = new JButton();
		bt_panel = new JPanel();
		
		//포인트 충전, 수업 예약, 출결체크
		
		bt_panel.add(point_bt);
		bt_panel.add(book_bt);
		bt_panel.add(attend_bt);
		
		mainscreen.add(bt_panel);
		
		
		
		
		setVisible(true);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setSize(500, 800);
		setLocationRelativeTo(null);
		setResizable(false);
	
	
		
		
		
		
	}

	public static void main(String[] args) {
	new MainPage();

	}

}

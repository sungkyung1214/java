package homework.ict.edu;

public class Cao {
public static void main(String[] args) {
	//이름이 홍길동인 사람의 점수가 
			//국어 90, 영어 80, 수학 80점 이다.
			//총점과 평균을 구하자
			//화면 출력은 이름, 총점, 평균만 출력하자
			//(단, 평균은 소수점 첫째자리까지 구하자)
		
	int kor=90;
	int eng=80;
	int math= 80;
	
	int sum = kor + eng + math;
	
	
	double avg = sum/3; //83.0
	double avg1 = sum/3.0; //83.3333333333333
	double avg2 = (sum/3.0)*10; //833.333333
	double avg3 = (int)sum/3.0*10;//833.0
	double avg4 = (int)((sum/3.0)*10)/10; //83.3

	System.out.println(sum);
	System.out.println(avg3);
		 

}
}
